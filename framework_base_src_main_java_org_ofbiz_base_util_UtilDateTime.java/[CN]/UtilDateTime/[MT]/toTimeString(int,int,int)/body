{
  String hourStr;
  String minuteStr;
  String secondStr;
  if (hour < 10) {
    hourStr="0" + hour;
  }
 else {
    hourStr="" + hour;
  }
  if (minute < 10) {
    minuteStr="0" + minute;
  }
 else {
    minuteStr="" + minute;
  }
  if (second < 10) {
    secondStr="0" + second;
  }
 else {
    secondStr="" + second;
  }
  if (second == 0) {
    return hourStr + ":" + minuteStr;
  }
 else {
    return hourStr + ":" + minuteStr+ ":"+ secondStr;
  }
}
