{
  ByteArrayOutputStream bos=null;
  ObjectOutputStream oos=null;
  byte[] data=null;
  try {
    bos=new ByteArrayOutputStream();
    oos=new ObjectOutputStream(bos);
    oos.writeObject(obj);
    data=bos.toByteArray();
  }
 catch (  IOException e) {
    Debug.logError(e,module);
  }
 finally {
    try {
      if (oos != null) {
        oos.flush();
        oos.close();
      }
      if (bos != null) {
        bos.close();
      }
    }
 catch (    IOException e) {
      Debug.logError(e,module);
    }
  }
  return data;
}
