{
  if (prefix == null || prefix.length() == 0)   return "";
  StringBuffer cppBuff=new StringBuffer(prefix.replace('\\','/'));
  if (cppBuff.charAt(0) != '/') {
    cppBuff.insert(0,'/');
  }
  if (cppBuff.charAt(cppBuff.length() - 1) == '/') {
    cppBuff.deleteCharAt(cppBuff.length() - 1);
  }
  return cppBuff.toString();
}
