{
  Class theClass=clazz;
  boolean checking=true;
  boolean found=false;
  while (checking) {
    Class[] ifaces=theClass.getInterfaces();
    for (    Class iface : ifaces) {
      if (DynamicAccessHandler.class.equals(iface)) {
        loadHandler(theClass);
        found=true;
      }
    }
    if (!found) {
      theClass=theClass.getSuperclass();
      if (theClass == null) {
        checking=false;
      }
    }
 else {
      checking=false;
    }
  }
}
