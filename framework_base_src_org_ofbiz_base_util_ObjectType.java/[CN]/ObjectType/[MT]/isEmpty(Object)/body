{
  if (value == null)   return true;
  if (value instanceof String) {
    if (((String)value).length() == 0) {
      return true;
    }
  }
 else   if (value instanceof Collection) {
    if (((Collection)value).size() == 0) {
      return true;
    }
  }
 else   if (value instanceof Map) {
    if (((Map)value).size() == 0) {
      return true;
    }
  }
  return false;
}
