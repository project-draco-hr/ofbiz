{
  try {
    StringBuilder sb=new StringBuilder();
    char[] buf=new char[4096];
    int r;
    while ((r=reader.read(buf,0,4096)) != -1) {
      if (r == 0)       break;
      sb.append(buf,0,r);
    }
    return filterLineEndings(sb).toString();
  }
  finally {
    try {
      reader.close();
    }
 catch (    IOException e) {
      Debug.logError(e,"Error closing after reading text: " + e.toString(),module);
    }
  }
}
