{
  Map uri=getRequestMapMap(uriStr);
  if (uri != null) {
    return new Boolean((String)uri.get(ConfigXMLReader.EVENT_GLOBAL_TRANSACTION)).booleanValue();
  }
 else {
    if (Debug.verboseOn()) {
      Debug.logWarning("[RequestManager.getEventGlobalTransaction] Global-transaction of event for request \"" + uriStr + "\" not found, defaulting to true",module);
    }
    return false;
  }
}
