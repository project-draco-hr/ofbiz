{
  super("OFBiz-AdminPortThread");
  try {
    this.serverSocket=new ServerSocket(config.adminPort,1,config.adminAddress);
  }
 catch (  IOException e) {
    throw new StartupException("Couldn't create server socket(" + config.adminAddress + ":"+ config.adminPort+ ")",e);
  }
  setDaemon(false);
}
