{
  while (serverRunning) {
    try {
      Socket clientSocket=serverSocket.accept();
      System.out.println("Received connection from - " + clientSocket.getInetAddress() + " : "+ clientSocket.getPort());
      processClientRequest(clientSocket);
      clientSocket.close();
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  shutdownServer();
  System.exit(0);
}
