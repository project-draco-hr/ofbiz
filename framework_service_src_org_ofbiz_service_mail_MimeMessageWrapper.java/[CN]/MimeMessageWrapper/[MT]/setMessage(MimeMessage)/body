{
  if (message != null) {
    this.message=message;
    ByteArrayOutputStream baos=new ByteArrayOutputStream();
    try {
      message.writeTo(baos);
      baos.flush();
      serializedBytes=baos.toByteArray();
    }
 catch (    MessagingException e) {
      Debug.logError(e,module);
    }
catch (    IOException e) {
      Debug.logError(e,module);
    }
 finally {
      try {
        baos.close();
      }
 catch (      IOException e) {
        Debug.logError(e,module);
      }
    }
  }
}
