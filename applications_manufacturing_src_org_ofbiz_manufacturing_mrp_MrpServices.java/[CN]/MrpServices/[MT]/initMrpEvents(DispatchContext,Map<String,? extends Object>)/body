      BigDecimal qtyProduced=genericResult.getBigDecimal("quantityProduced");
      if (qtyProduced == null) {
        qtyProduced=BigDecimal.ZERO;
      }
      if (qtyProduced.compareTo(qtyToProduce) >= 0) {
        continue;
