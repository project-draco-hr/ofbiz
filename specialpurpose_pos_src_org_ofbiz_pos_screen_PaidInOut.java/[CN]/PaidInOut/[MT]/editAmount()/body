{
  if (wasMouseClicked() && ShowKeyboardInSaveSale) {
    try {
      Keyboard keyboard=new Keyboard(m_pos);
      keyboard.setText(m_amountEdit.getText());
      m_amountEdit.setText(keyboard.openDlg());
    }
 catch (    Exception e) {
      Debug.logError(e,module);
    }
    m_dialog.repaint();
  }
  return;
}
