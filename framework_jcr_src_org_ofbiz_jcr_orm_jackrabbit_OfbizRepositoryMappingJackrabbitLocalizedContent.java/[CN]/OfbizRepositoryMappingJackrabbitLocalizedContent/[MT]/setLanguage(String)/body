{
  this.language=language;
  if (!super.getPath().endsWith(language) || !super.getPath().endsWith(language + "/")) {
    String newPath=super.getPath();
    if (newPath.endsWith("/")) {
      newPath=newPath.substring(0,newPath.lastIndexOf("/"));
    }
    newPath=newPath.substring(0,newPath.lastIndexOf("/"));
    setLocalizedPath(newPath);
  }
}
