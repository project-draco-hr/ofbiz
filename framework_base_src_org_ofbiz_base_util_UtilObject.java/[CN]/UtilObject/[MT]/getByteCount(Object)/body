{
  OutputStreamByteCount osbc=null;
  ObjectOutputStream oos=null;
  long objSize=0;
  try {
    osbc=new OutputStreamByteCount();
    oos=new ObjectOutputStream(osbc);
    oos.writeObject(obj);
    objSize=osbc.getByteCount();
  }
 catch (  IOException e) {
    Debug.logVerbose(e,module);
  }
  try {
    if (oos != null) {
      oos.flush();
      oos.close();
    }
    if (osbc != null) {
      osbc.close();
    }
  }
 catch (  IOException e) {
    Debug.logError(e,module);
  }
  return objSize;
}
