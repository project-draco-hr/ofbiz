{
  OutputStreamByteCount osbc=null;
  ObjectOutputStream oos=null;
  try {
    osbc=new OutputStreamByteCount();
    oos=new ObjectOutputStream(osbc);
    oos.writeObject(obj);
  }
 catch (  IOException e) {
    Debug.logError(e,module);
  }
 finally {
    try {
      if (oos != null) {
        oos.flush();
        oos.close();
      }
      if (osbc != null) {
        osbc.close();
      }
    }
 catch (    IOException e) {
      Debug.logError(e,module);
    }
  }
  if (osbc != null) {
    return osbc.getByteCount();
  }
 else {
    return 0;
  }
}
