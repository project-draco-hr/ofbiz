{
  try {
    GenericValue product=delegator.findOne("Product",UtilMisc.toMap("productId",productI),true);
    if (product != null) {
      return "Y".equals(product.getString("requireAmount"));
    }
  }
 catch (  GenericEntityException e) {
    Debug.logWarning(e.getMessage(),module);
  }
  return false;
}
