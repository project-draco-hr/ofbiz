{
  Delegator delegator=(Delegator)pageContext.getRequest().getAttribute("delegator");
  ServletRequest request=pageContext.getRequest();
  if (productId == null)   productId=UtilFormatOut.checkNull(request.getParameter("product_id"),request.getParameter("PRODUCT_ID"));
  if (productId.equals(""))   return;
  GenericValue product=null;
  try {
    product=delegator.findByPrimaryKey("Product",UtilMisc.toMap("productId",productId));
  }
 catch (  GenericEntityException e) {
    Debug.logWarning(e.getMessage(),module);
    product=null;
  }
  if (product != null)   pageContext.setAttribute(attributeName,product);
}
