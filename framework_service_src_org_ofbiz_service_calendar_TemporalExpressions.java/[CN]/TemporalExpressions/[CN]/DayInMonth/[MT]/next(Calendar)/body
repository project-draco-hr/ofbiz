{
  int month=cal.get(Calendar.MONTH);
  Calendar next=(Calendar)cal.clone();
  alignDayOfWeek(next);
  setStartOfDay(next);
  if (next.before(cal) || next.equals(cal)) {
    next.set(Calendar.DAY_OF_MONTH,1);
    if (next.get(Calendar.MONTH) == month) {
      next.add(Calendar.MONTH,1);
    }
    alignDayOfWeek(next);
  }
  return next;
}
