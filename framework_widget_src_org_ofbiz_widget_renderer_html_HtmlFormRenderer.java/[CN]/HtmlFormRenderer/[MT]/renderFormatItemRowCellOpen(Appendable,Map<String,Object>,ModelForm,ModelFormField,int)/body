{
  writer.append("   <td");
  String areaStyle=modelFormField.getWidgetAreaStyle();
  if (positionSpan > 1) {
    writer.append(" colspan=\"");
    writer.append(Integer.toString(positionSpan));
    writer.append("\"");
  }
  if (UtilValidate.isNotEmpty(areaStyle)) {
    writer.append(" class=\"");
    writer.append(areaStyle);
    writer.append("\"");
  }
  writer.append(">");
}
