{
  this.name=name;
  if (name == null || name.length() == 0) {
    empty=true;
    needsExpand=false;
    fma=new FlexibleMapAccessor<T>(name);
    attributeName=name;
  }
 else {
    empty=false;
    int openPos=name.indexOf("${");
    if (openPos != -1 && name.indexOf("}",openPos) != -1) {
      fma=null;
      attributeName=null;
      needsExpand=true;
    }
 else {
      int dotIndex=name.indexOf('.');
      if (dotIndex != -1) {
        attributeName=name.substring(0,dotIndex);
        fma=new FlexibleMapAccessor<T>(name.substring(dotIndex + 1));
      }
 else {
        attributeName=name;
        fma=null;
      }
      needsExpand=false;
    }
  }
}
