{
  this.request.setAttribute("image",hyperlinkField.getImage());
  ModelFormField modelFormField=hyperlinkField.getModelFormField();
  makeHyperlinkByType(writer,hyperlinkField.getLinkType(),modelFormField.getWidgetStyle(),hyperlinkField.getTargetType(),hyperlinkField.getTarget(context),hyperlinkField.getParameterList(),hyperlinkField.getDescription(context),hyperlinkField.getTargetWindow(context),hyperlinkField.getConfirmation(context),modelFormField,this.request,this.response,context);
  this.appendTooltip(writer,context,modelFormField);
}
