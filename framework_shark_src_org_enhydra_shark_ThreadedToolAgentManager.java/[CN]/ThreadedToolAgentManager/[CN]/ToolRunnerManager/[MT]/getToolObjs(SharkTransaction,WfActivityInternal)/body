{
  WfProcessInternal pr=activity.container(trans);
  WorkflowProcess wp=SharkUtilities.getWorkflowProcess(pr.manager(trans).package_id(trans),pr.manager_version(trans),pr.manager(trans).process_definition_id(trans));
  return SharkUtilities.getActivityDefinition(trans,activity,wp,activity.block_activity(trans)).getTools().toCollection();
}
