{
  while (isRunning && !stopped) {
    this.pull();
    try {
      Thread.sleep(waitTime);
    }
 catch (    InterruptedException e) {
      this.stopped=true;
      this.isRunning=false;
    }
  }
  if (debug != null && debug.equalsIgnoreCase("true"))   System.out.println("Polling finished.");
}
