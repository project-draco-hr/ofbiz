{
  sb.append("CREATE");
  if (isUnique) {
    sb.append(" UNIQUE");
  }
  sb.append(" INDEX ");
  sb.append(name);
  sb.append(" ON ");
  sb.append(table);
  if (using != null) {
    sb.append(" USING ").append(using);
  }
  sb.append(" (");
  StringUtil.append(sb,values,null,null,", ");
  sb.append(')');
  sb.append(';');
  return sb;
}
