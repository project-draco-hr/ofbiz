{
  try {
    ByteArrayOutputStream os=new ByteArrayOutputStream();
    UtilXml.writeXmlDocument(node,os,encoding,omitXmlDeclaration,indent,indentAmount,false);
    os.close();
    return os.toString();
  }
 catch (  Exception e) {
    Debug.logError(e,"Error while creating XML String ",module);
  }
  return null;
}
