{
  this.request.setAttribute("image",hyperlinkField.getImageLocation(context));
  ModelFormField modelFormField=hyperlinkField.getModelFormField();
  String description=encode(hyperlinkField.getDescription(context),modelFormField,context);
  String confirmation=encode(hyperlinkField.getConfirmation(context),modelFormField,context);
  WidgetWorker.makeHyperlinkByType(writer,hyperlinkField.getLinkType(),modelFormField.getWidgetStyle(),hyperlinkField.getTargetType(),hyperlinkField.getTarget(context),hyperlinkField.getParameterMap(context),description,hyperlinkField.getTargetWindow(context),confirmation,modelFormField,this.request,this.response,context);
  this.appendTooltip(writer,context,modelFormField);
}
