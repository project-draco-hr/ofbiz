{
  buffer.append("   <td");
  String areaStyle=modelFormField.getTitleAreaStyle();
  if (positionSpan > 1) {
    buffer.append(" colspan=\"");
    buffer.append(positionSpan);
    buffer.append("\"");
  }
  if (UtilValidate.isNotEmpty(areaStyle)) {
    buffer.append(" class=\"");
    buffer.append(areaStyle);
    buffer.append("\"");
  }
  buffer.append(">");
}
