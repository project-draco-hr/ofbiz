{
  writer.append("   <td");
  if (positionSpan > 0) {
    writer.append(" colspan=\"");
    writer.append(Integer.toString(1 + (positionSpan * 3)));
    writer.append("\"");
  }
  String areaStyle=modelFormField.getWidgetAreaStyle();
  if (UtilValidate.isNotEmpty(areaStyle)) {
    writer.append(" class=\"");
    writer.append(areaStyle);
    writer.append("\"");
  }
  writer.append(">");
}
