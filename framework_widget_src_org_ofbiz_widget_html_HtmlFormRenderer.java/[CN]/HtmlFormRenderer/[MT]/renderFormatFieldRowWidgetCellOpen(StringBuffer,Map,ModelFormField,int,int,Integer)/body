{
  buffer.append("   <td");
  if (positionSpan > 0) {
    buffer.append(" colspan=\"");
    buffer.append(1 + (positionSpan * 3));
    buffer.append("\"");
  }
  String areaStyle=modelFormField.getWidgetAreaStyle();
  if (UtilValidate.isNotEmpty(areaStyle)) {
    buffer.append(" class=\"");
    buffer.append(areaStyle);
    buffer.append("\"");
  }
  buffer.append(">");
}
