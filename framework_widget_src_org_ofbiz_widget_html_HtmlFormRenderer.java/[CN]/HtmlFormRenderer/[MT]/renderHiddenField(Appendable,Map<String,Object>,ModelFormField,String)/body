{
  writer.append("<input type=\"hidden\"");
  writer.append(" name=\"");
  writer.append(modelFormField.getParameterName(context));
  writer.append('"');
  if (UtilValidate.isNotEmpty(value)) {
    writer.append(" value=\"");
    writer.append(StringEscapeUtils.escapeHtml(value));
    writer.append('"');
  }
  writer.append("/>");
  appendWhitespace(writer);
}
