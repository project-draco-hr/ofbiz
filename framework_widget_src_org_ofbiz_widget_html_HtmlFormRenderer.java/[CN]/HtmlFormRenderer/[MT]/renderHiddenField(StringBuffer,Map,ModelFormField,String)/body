{
  buffer.append("<input type=\"hidden\"");
  buffer.append(" name=\"");
  buffer.append(modelFormField.getParameterName(context));
  buffer.append('"');
  if (UtilValidate.isNotEmpty(value)) {
    buffer.append(" value=\"");
    buffer.append(StringEscapeUtils.escapeHtml(value));
    buffer.append('"');
  }
  buffer.append("/>");
}
