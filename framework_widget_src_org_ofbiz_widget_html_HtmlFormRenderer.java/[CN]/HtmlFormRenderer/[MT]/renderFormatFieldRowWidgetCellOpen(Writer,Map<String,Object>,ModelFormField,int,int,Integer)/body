{
  writer.write("   <td");
  if (positionSpan > 0) {
    writer.write(" colspan=\"");
    writer.write(Integer.toString(1 + (positionSpan * 3)));
    writer.write("\"");
  }
  String areaStyle=modelFormField.getWidgetAreaStyle();
  if (UtilValidate.isNotEmpty(areaStyle)) {
    writer.write(" class=\"");
    writer.write(areaStyle);
    writer.write("\"");
  }
  writer.write(">");
}
