{
  String className=modelFormField.getWidgetStyle();
  if (UtilValidate.isNotEmpty(className) || modelFormField.shouldBeRed(context)) {
    buffer.append(" class=\"");
    buffer.append(className);
    if (modelFormField.shouldBeRed(context)) {
      buffer.append(" alert");
    }
    buffer.append('"');
  }
}
