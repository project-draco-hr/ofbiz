{
  List<Future<T>> futures=new ArrayList<Future<T>>(tasks.size());
  if (this.executor == null) {
    for (    Callable<T> callable : tasks) {
      FutureTask<T> task=new FutureTask<T>(callable);
      task.run();
      futures.add(task);
    }
    return futures;
  }
  for (  Callable<T> callable : tasks) {
    futures.add(this.executor.submit(callable));
  }
  return futures;
}
